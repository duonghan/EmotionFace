<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_darker"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/splash_img_link"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_link"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/splash_img_emoji"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo_smile"
        android:layout_toStartOf="@id/splash_img_link"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/splash_img_android"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_android"
        android:layout_toEndOf="@id/splash_img_link"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@id/splash_img_emoji"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/splash_text"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/ceil"
        android:layout_marginTop="20dp"/>

</RelativeLayout>